import java.util.Scanner;

public class Latihan_04 {
	public static void main(String[] args) {
		int jml;
		double total_harga = 0,diskon = 0,total_bayar = 0;
		
		System.out.println("========================================");
		System.out.println("          TOKO SERBAGUNA IBIK           ");
		System.out.println("========================================");
		System.out.print("Masukkan jumlah produk yang dibeli : ");
		Scanner input = new Scanner(System.in);
		jml = input.nextInt();
		input.close();
		
		System.out.println();
		
		total_harga = jml * 6.300;
		
		System.out.println("ITEM               QTY   HARGA        TOTAL");
		System.out.println("============================================");
		System.out.println("ROTI ENAK           " + jml + "    Rp 6.300     " + total_harga );
		System.out.println("--------------------------------------------");
		if(jml % 3 == 0) {
			diskon = 0.05 * total_harga;
			total_bayar = total_harga - diskon;
			System.out.println("Diskon : 5%");
		}else {
			diskon = 0.010 * total_harga;
			total_bayar = total_harga - diskon;
			System.out.println("Diskon : 10%");
		}
		System.out.println("Sub Total = " + total_bayar);
	}
}
