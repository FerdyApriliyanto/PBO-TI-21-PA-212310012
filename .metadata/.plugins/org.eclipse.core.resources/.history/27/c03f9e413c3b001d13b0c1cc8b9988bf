import java.util.Scanner;

public class Latihan_04 {
	public static void main(String[] args) {
		int jml;
		double total = 0;
		
		System.out.println("========================================");
		System.out.println("          TOKO SERBAGUNA IBIK           ");
		System.out.println("========================================");
		System.out.print("Masukkan jumlah produk yang dibeli : ");
		Scanner input = new Scanner(System.in);
		jml = input.nextInt();
		input.close();
		
		System.out.println();
		
		if(jml % 3 == 0) {
			total = (jml * 6.300) * (5/100);
		}
		
		System.out.println("ITEM               QTY   HARGA        TOTAL");
		System.out.println("============================================");
		System.out.println("ROTI ENAK           " + jml + "    Rp 6.300     " + total );
		System.out.println("--------------------------------------------");
		
	}
}
